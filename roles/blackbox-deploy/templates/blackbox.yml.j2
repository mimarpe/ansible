modules:
  http_2xx:
    prober: http
    timeout: 5s
    http:
      valid_http_versions: ["HTTP/1.1", "HTTP/2"]
      valid_status_codes: []  # Defaults to 2xx
      method: GET
      no_follow_redirects: false
      fail_if_ssl: false
      fail_if_not_ssl: false
      tls_config:
        insecure_skip_verify: true
  tcp:
    prober: tcp
    timeout: 5s
    tcp:
      tls: true
      tls_config:
        insecure_skip_verify: true
        cert_file: /etc/blackbox/CA/{{inventory_hostname}}-cert.pem
        key_file: /etc/blackbox/CA/{{inventory_hostname}}-key.pem

  tcp_nossl:
    prober: tcp
    timeout: 5s
    tcp:
      tls: false
