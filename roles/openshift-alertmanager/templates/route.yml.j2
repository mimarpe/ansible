- apiVersion: route.openshift.io/v1
  kind: Route
  metadata:
    annotations:
    labels:
      app: {{appname}}-alertmanager
    name: {{appname}}-alertmanager
  spec:
    host: alertmanager-{{appname}}.{{oc_endpoint[env_domain]}}
    port:
      targetPort: http
    tls:
      termination: edge
    to:
      kind: Service
      name: {{appname}}-alertmanager
    wildcardPolicy: None

