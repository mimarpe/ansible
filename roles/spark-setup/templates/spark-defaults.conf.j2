# Default system properties included when running spark-submit.
# This is useful for setting default environmental settings.

# Example:
# spark.master                     spark://master:7077
# spark.eventLog.enabled           true
# spark.eventLog.dir               hdfs://namenode:8021/directory
# spark.serializer                 org.apache.spark.serializer.KryoSerializer
# spark.driver.memory              5g
# spark.executor.extraJavaOptions  -XX:+PrintGCDetails -Dkey=value -Dnumbers="one two three"
#
spark.ui.enabled                false
spark.authenticate              false
spark.master.rest.enabled       true
spark.master.rest.port          {{spark_port_master_rest}}

spark.master.ui.port            {{spark_port_master_ui}}

spark.worker.ui.port            {{spark_port_worker_ui}}

spark.driver.port               {{spark_port_driver}}

#spark.ui.port                   {{spark_port_driver_ui}}

spark.driver.blockManager.port  {{spark_blockManager}}
spark.blockManager.port         {{spark_blockManager}}

#enable cleanup of temp directories for worker and application
spark.worker.cleanup.enabled    true
#set cleanup frequency each day
spark.worker.cleanup.appDataTtl 86400