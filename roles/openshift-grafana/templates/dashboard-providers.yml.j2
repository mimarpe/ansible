- apiVersion: v1
  kind: ConfigMap
  metadata:
    name: {{appname}}-grafana-dashboard-providers
    labels:
      app: {{appname}}-grafana
  data:
    dashboard-providers.yml: |
      apiVersion: 1
      providers:
      - disableDeletion: false
        editable: true
        folder: ""
        name: default
        options:
          path: /var/lib/grafana/dashboards
        orgId: 1
        type: file

